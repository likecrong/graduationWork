<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/endingbook_lay"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.25"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="4.8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.5"/>
            <ImageView
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:src="@drawable/back"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="7.5"/>
        </LinearLayout>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="3.85"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.5"/>
            <Button
                android:id="@+id/ending1"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="9"
                android:background="@drawable/num1"
                android:onClick="onClick"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.5"/>
        </LinearLayout>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="3.85"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.5"/>
            <Button
                android:id="@+id/ending2"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="9"
                android:background="@drawable/num2"
                android:onClick="onClick"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.5"/>
        </LinearLayout>
        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.5"/>
            <ImageView
                android:id="@+id/setsound"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:adjustViewBounds="true"
                android:layout_weight="2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="7.5"/>
        </LinearLayout>
        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="4.95" >
        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"/>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.5"/>
            <Button
                android:id="@+id/ending3"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="8.5"
                android:background="@drawable/num3"
                android:onClick="onClick"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1.9"/>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.5"/>
            <Button
                android:id="@+id/ending4"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="8.5"
                android:background="@drawable/num4"
                android:onClick="onClick"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"/>
    </LinearLayout>
</LinearLayout>