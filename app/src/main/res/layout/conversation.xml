<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/sayingFull"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/sayingLayout"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="5"
        android:visibility="invisible">
        <ImageView
            android:id="@+id/floatingCharacter"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true"
            android:scaleType="fitStart"
            android:src="@drawable/kevin_basic"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/conv_shape"
            android:layout_above="@+id/conv"
            android:padding="5sp"
            android:text="케빈"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/conv"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/conv_shape"
            android:minHeight="100sp"
            android:maxHeight="150sp"
            android:padding="15sp"

            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="30sp"
            android:text=" "
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/conv_ok"
            android:layout_width="50sp"
            android:layout_height="30sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="#00cfcf"
            android:text="확인"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:visibility="invisible"

            />
    </RelativeLayout>

</LinearLayout>