<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"> <!--버튼 눌렀을 때-->
        <shape android:shape="oval"> <!--타원 모양-->
            <solid android:color="#B7B7BE"></solid> <!--버튼 내부 색-->
            <size android:height="40dp" android:width="40dp"/> <!--버튼 크기-->
            <stroke android:width="1dp"></stroke> <!--버튼 테두리 두께-->
            <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp" />
        </shape>
    </item>
    <item android:state_pressed="false"> <!--버튼 누르지 않았을 때-->
        <shape android:shape="oval">
            <solid android:color="#B7B7BE" />
            <size android:height="40dp" android:width="40dp"/>
            <stroke android:width="1dp"></stroke>
            <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp" />

        </shape>
    </item>
</selector>


